{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Liste des articles{% endblock %}

{% block body %}

    <h2>Liste des articles</h2>

    <p><a href="{{ path('animal-add') }}" class="btn btn-success">Ajouter un article</a></p>

    <table class="table table-hoverable table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Date de publication</th>
                <th scope="col">Modifié le</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        
            {% for animal in listAnimal %}

                 <tr>
                    <th scope="row">{{ animal.id }}</th>
                    <td>
                        <a href="{{ path('animal-show', {id: animal.id}) }}">{{ animal.title }}
                        </a>
                    </td>
                    <td>{{ animal.publishedAt|date("Y-m-d H:i") }}</td>
                    <td>{% if animal.updatedAt %}{{ animal.updatedAt|date("Y-m-d H:i") }}{% endif %}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('animal-update', {id: animal.id}) }}">Modifier</a>

                        <a onclick="return confirm('Supprimer l\'article #{{ animal.id }}')" class="btn btn-sm btn-danger" href="{{ path('animal-delete', {id: animal.id}) }}">Supprimer</a>
                    </td>
                </tr>

            {% else %}
                <tr>
                    <th scope="row" colspan="5">
                        Maurice a cassé la BDD ?
                    </th>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
