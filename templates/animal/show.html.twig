{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}

<h2>{{ post.title }} <span class="badge bg-primary">{{ post.nbLikes }} &hearts;</span></h2>

<p><i>Publié le : {{ post.publishedAt|date("Y-m-d H:i") }}</i></p>

<p>{{ post.body }}</p>

{# Nous sommes en train d'afficher les données d'un article qui sont contenues dans la variable TWIG post
Donc, si on fait post.tags, c'est l'équivalent de $post->getTags() #}

{% for tag in post.tags %}
    <button type="button" class="btn btn-primary btn-sm">
        {{ tag.name }}
    </button>
{% else %}
    maurice a volé les tags
{% endfor %}


{% endblock %}